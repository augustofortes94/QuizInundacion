<div class="body-div">
  <div class="title-div">
    <h2 class="title-pregunta"> <%= @answer.value_to_s %> </h2>
  </div>
  <div>
    <p class="text-pregunta">
      <%= @answer.reason %>
    </p>
  </div>
  <div>
  <p class="text-pregunta">
    <%= "Puntaje: #{@game.score}" %>
  </p>
  </div>
  <div class="buttons">
    <%= link_to 'Proxima pregunta', next_round_path(game: @game, offset: @offset), class: "button button-config" %>
  </div>
  <div class="back-main">
    <%= link_to 'Abandonar partida', '/', class: "button back-main-button"%>
  </div>
</div>



