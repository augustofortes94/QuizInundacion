<p id="notice"><%= notice %></p>
<div class="body-div">
  <h2 class="title-pregunta">Puntajes altos</h2>
  <br>

  <div class="instrucciones">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" class="text-pregunta">Nombre</th>
          <th scope="col" class="text-pregunta">Puntos</th>
        </tr>
      </thead>

      <tbody>
        <% @scores.each do |score| %>
          <tr scope="row">
            <td class="text-pregunta"><%= score.name %></td>
            <td class="text-pregunta"><%= score.score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="back-main">
      <%= link_to 'Volver al menu principal', '/', class: "button back-main-button"%>
    </div>
</div>
